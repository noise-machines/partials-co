{
  "hosting": {
    "public": "build",
    "cleanUrls": true,
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }],
    "headers": [{
      "source" : "/",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=2592000"
      }]
    }, {
      "source" : "/**/*",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=2592000"
      }]
    }, {
      "source" : "**/service-worker.js",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=0"
      }]
    }]
  }
}
